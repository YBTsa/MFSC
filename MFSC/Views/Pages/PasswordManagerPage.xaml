<Page x:Class="MFSC.Views.Pages.PasswordManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MFSC.Views.Pages" 
      xmlns:pages="clr-namespace:MFSC.ViewModels.Pages" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:MFSC.Helpers"
      d:DataContext="{d:DesignInstance Type=pages:PasswordManagerViewModel,IsDesignTimeCreatable=False}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="密码管理器">

    <Page.Resources>
        <!-- 复用CleanerPage的转换器 -->
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:StringToBrushConverter x:Key="StringToBrushConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- 列表项样式（保持与CleanerPage一致） -->
        <Style TargetType="ListViewItem" x:Key="PasswordItemStyle">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 密码列表区域 -->
        <ui:Card Grid.Row="0" Margin="0,5" VerticalAlignment="Top">
            <ui:ListView 
                ItemsSource="{Binding PasswordItems}" 
                BorderThickness="0" 
                Background="Transparent"
                ItemContainerStyle="{StaticResource PasswordItemStyle}"
                VirtualizingPanel.IsVirtualizing="True" 
                VirtualizingPanel.VirtualizationMode="Recycling"
                ScrollViewer.VerticalScrollBarVisibility="Visible" Height="201">
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Margin="5">
                                <ui:TextBlock Text="{Binding Username, StringFormat='用户名: {0}'}" FontSize="14" FontWeight="Medium"/>
                                <ui:TextBlock Text="{Binding Password, StringFormat='密码: {0}'}" FontSize="12" Margin="0,3,0,0"/>
                            </StackPanel>

                            <ui:Button 
                                Grid.Column="1"
                                Command="{Binding DataContext.DeletePasswordCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                Content="删除"
                                Width="60"
                                Margin="5"
                                IsEnabled="{Binding DataContext.IsLoading, Converter={StaticResource InverseBooleanConverter}, RelativeSource={RelativeSource AncestorType=Page}}"/>
                        </Grid>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </ui:Card>

        <!-- 新增密码区域 -->
        <ui:Card Grid.Row="1" Margin="0,10,0,0">
            <StackPanel Margin="10">
                <ui:TextBlock Text="添加新密码" FontSize="16" Margin="0,5,0,10"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ui:TextBox 
                        Grid.Row="0"
                        PlaceholderText="用户名" 
                        Text="{Binding NewPasswordItem.Username}"
                        Margin="5"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>

                    <ui:TextBox 
                        Grid.Row="1"
                        PlaceholderText="密码" 
                        Text="{Binding NewPasswordItem.Password}"
                        Margin="5"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
                </Grid>

                <ui:Button 
                    Content="添加" 
                    Command="{Binding AddPasswordCommand}"
                    Width="120"
                    Height="36"
                    Margin="5,10,0,0"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                    <ui:Button.Icon>
                        <ui:FontIcon Glyph="&#xE105;" FontFamily="Segoe Fluent Icons"/>
                    </ui:Button.Icon>
                </ui:Button>
            </StackPanel>
        </ui:Card>

        <ui:TextBlock 
            Grid.Row="2" 
            Text="{Binding ErrorMessage}" 
            Foreground="Red" 
            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
            Margin="0,0,0,10"
            FontSize="13"/>
    </Grid>
</Page>