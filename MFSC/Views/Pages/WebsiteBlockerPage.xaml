<Page
    x:Class="MFSC.Views.Pages.WebsiteBlockerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MFSC.Views.Pages"
    xmlns:vm="clr-namespace:MFSC.ViewModels.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="网站屏蔽"
    d:DataContext="{d:DesignInstance vm:WebsiteBlockerViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 网站列表（带滚动功能） -->
        <StackPanel Grid.Row="0">
            <ui:TextBlock Text="屏蔽网站选择" FontSize="18" Margin="0,0,0,10"/>

            <ui:Card>
                <!-- 添加ScrollViewer实现滚动 -->
                <ScrollViewer 
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    MaxHeight="266">

                    <ui:ListView ItemsSource="{Binding Websites}" BorderThickness="0">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel Margin="5,2">
                                    <CheckBox 
                                        IsChecked="{Binding IsBlocked, Mode=TwoWay}" 
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"/>
                                    <StackPanel>
                                        <ui:TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                        <ui:TextBlock Text="{Binding Domain}" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </WrapPanel>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                </ScrollViewer>
            </ui:Card>
        </StackPanel>

        <!-- 状态提示 -->
        <ui:TextBlock 
            Grid.Row="1" 
            Text="{Binding StatusMessage}" 
            Margin="0,10,0,0" 
            Foreground="Red"/>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,10,0,0">
            <ui:Button 
                Content="保存设置" 
                Command="{Binding SaveCommand}">
                <ui:Button.Icon>
                    <ui:FontIcon Glyph="&#xe105;" FontFamily="Segoe Fluent Icons"/>
                </ui:Button.Icon>
            </ui:Button>
        </StackPanel>
    </Grid>
</Page>
    