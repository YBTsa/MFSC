 <Page
    x:Class="MFSC.Views.Pages.WebsiteBlockerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MFSC.Views.Pages"
    xmlns:vm="clr-namespace:MFSC.ViewModels.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="网站屏蔽"
    d:DataContext="{d:DesignInstance vm:WebsiteBlockerViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 网站列表 -->
        <ScrollViewer Margin="20,0,20,0" Grid.Row="0">
            <StackPanel>
                <ui:TextBlock Text="屏蔽器选择" FontSize="18"/>
                <Border BorderThickness="1" Margin="0,10,0,0" BorderBrush="Black">
                    <ui:ListView ItemsSource="{Binding Websites}">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <CheckBox 
                                        IsChecked="{Binding IsBlocked, Mode=TwoWay}" 
                                        Margin="5,2"/>
                                    <ui:TextBlock 
                                        Text="{Binding Name}" 
                                        VerticalAlignment="Center"
                                        Margin="5,2"/>
                                </WrapPanel>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- 状态提示 -->
        <ui:TextBlock 
            Grid.Row="1" 
            Text="{Binding StatusMessage}" 
            Margin="20,0,20,0" 
            Foreground="Red"/>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,10,20,20">
            <ui:Button 
                Content="保存" 
                Command="{Binding SaveCommand}" 
                Margin="10,0,10,0"
                IsEnabled="{Binding !IsProcessing}">
            </ui:Button>
        </StackPanel>
    </Grid>
</Page>