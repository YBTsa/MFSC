<Page
    x:Class="MFSC.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MFSC.Views.Pages"
    xmlns:vm="clr-namespace:MFSC.ViewModels.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:MFSC.Helpers"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance vm:DashboardViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <ui:Button HorizontalAlignment="Left" Background="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}" MouseOverBackground="{x:Static SystemColors.AccentColorLight1Brush}" PressedBackground="{x:Static SystemColors.AccentColorLight2Brush}" Command="{Binding LinkToGithubCommand}">
                <WrapPanel>
                    <Image Source="pack://application:,,,/Assets/github-icon.png" Width="24"></Image>
                    <TextBlock Text="我们的Github存储库" VerticalAlignment="Center"/>
                </WrapPanel>
            </ui:Button>
            <ui:Button HorizontalAlignment="Left" Content="我们的网站" Command="{Binding LinkToWebsiteCommand}" Margin="0,5,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="仪表盘" FontSize="24" Margin="0,5,0,0"/>
        </StackPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- CPU卡片（移除ProgressRing） -->
            <ui:Card Grid.Column="0" Grid.Row="0">
                <Grid Height="140">
                    <ui:FontIcon HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Segoe Fluent Icons" Glyph="&#xE950;" Width="40" Height="40"/>
                    <ui:TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="CPU使用率"/>
                    <ui:TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="{Binding CpuUsage, StringFormat={}{0}%}"/>
                </Grid>
            </ui:Card>
            <!-- 内存卡片（移除ProgressRing） -->
            <ui:Card Grid.Column="1" Grid.Row="0">
                <Grid Height="140">
                    <ui:FontIcon HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Segoe Fluent Icons" Glyph="&#xE964;" Width="40" Height="40"/>
                    <ui:TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="RAM使用率"/>
                    <ui:TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="{Binding MemoryUsage, StringFormat={}{0}%}"/>
                </Grid>
            </ui:Card>
            <!-- 硬盘卡片（移除ProgressRing） -->
            <ui:Card Grid.Column="2" Grid.Row="0">
                <Grid Height="140">
                    <ui:FontIcon HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Segoe Fluent Icons" Glyph="&#xEDA2;" Width="40" Height="40"/>
                    <ui:TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="硬盘使用率"/>
                    <ui:TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="{Binding DiskUsage, StringFormat={}{0}%}"/>
                </Grid>
            </ui:Card>
            <!-- GPU卡片（移除ProgressRing） -->
            <ui:Card Grid.Column="0" Grid.Row="1">
                <Grid Height="140">
                    <ui:FontIcon HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Segoe Fluent Icons" Glyph="&#xF211;" Width="40" Height="40"/>
                    <ui:TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="GPU使用率"/>
                    <ui:TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="{Binding GpuUsage, StringFormat={}{0}%}"/>
                </Grid>
            </ui:Card>
            <!-- 网络卡片（保持不变） -->
            <ui:Card Grid.Column="1" Grid.Row="1">
                <Grid Height="140">
                    <ui:FontIcon HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Segoe Fluent Icons" Glyph="&#xEDA3;" Width="40" Height="40"/>
                    <ui:TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="网络使用率"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE650;" FontSize="12"/>
                        <ui:TextBlock Text="{Binding NetworkUploadUsage,StringFormat={}{0}Kbps}"/>
                        <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE64F;" FontSize="12"/>
                        <ui:TextBlock Text="{Binding NetworkDownloadUsage,StringFormat={}{0}Kbps}"/>
                    </StackPanel>
                </Grid>
            </ui:Card>
            <!-- 进程数卡片（保持不变） -->
            <ui:Card Grid.Column="2" Grid.Row="1">
                <Grid Height="140">
                    <ui:FontIcon HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Segoe Fluent Icons" Glyph="&#xECAA;" Width="40" Height="40"/>
                    <ui:TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="进程数"/>
                    <ui:TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="{Binding ProcessCount}"/>
                </Grid>
            </ui:Card>
        </Grid>
    </Grid>
</Page>