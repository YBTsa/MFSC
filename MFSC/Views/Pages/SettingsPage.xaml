<Page
    x:Class="MFSC.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MFSC.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MFSC.ViewModels.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:helpers="clr-namespace:MFSC.Helpers"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance vm:SettingsViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 个性化标题 -->
            <RowDefinition Height="Auto"/>
            <!-- 主题文本 -->
            <RowDefinition Height="Auto"/>
            <!-- 浅色单选按钮 -->
            <RowDefinition Height="Auto"/>
            <!-- 深色单选按钮 -->
            <RowDefinition Height="Auto"/>
            <!-- 关于标题 -->
            <RowDefinition Height="Auto"/>
            <!-- 版本号 -->
            <RowDefinition Height="Auto"/>
            <!-- 版权信息 -->
        </Grid.RowDefinitions>

        <!-- 个性化区域 -->
        <TextBlock 
            Grid.Row="0"
            FontSize="20"
            FontWeight="Medium"
            Text="个性化" />

        <TextBlock 
            Grid.Row="1"
            Margin="0,12,0,0" 
            Text="主题" />

        <RadioButton
            Grid.Row="2"
            Margin="0,12,0,0"
            Command="{Binding ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="theme_light"
            Content="浅色"
            GroupName="themeSelect"
            IsChecked="{Binding CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}" />

        <RadioButton
            Grid.Row="3"
            Margin="0,8,0,0"
            Command="{Binding ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="theme_dark"
            Content="深色"
            GroupName="themeSelect"
            IsChecked="{Binding CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}" />

        <!-- 关于区域 -->
        <TextBlock
            Grid.Row="4"
            Margin="0,24,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="关于 班级PC管理器" />

        <TextBlock 
            Grid.Row="5"
            Margin="0,12,0,0" 
            Text="{Binding AppVersion, Mode=OneWay}" />

        <TextBlock 
            Grid.Row="6"
            Margin="0,5,0,0" 
            FontFamily="Segoe UI Variable">
            MFSC is a management system for PCs in schools.Crafted for both TCL and Seewo School Computer.
            <LineBreak/>
            UI Framework: WPF,Wpf-Ui.  Built with .NET 10.
            <LineBreak/>
            Licensed under the MIT License.
            <LineBreak/>
            <LineBreak/>
            © 2020-2025 YBTsa, All rights reserved.
        </TextBlock>
    </Grid>
</Page>