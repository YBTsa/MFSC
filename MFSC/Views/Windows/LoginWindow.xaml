<ui:FluentWindow
    x:Class="MFSC.Views.Windows.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MFSC.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:windows="clr-namespace:MFSC.ViewModels.Windows" d:DataContext="{d:DesignInstance Type=windows:LoginWindowViewModel,IsDesignTimeCreatable=False}"
    d:DesignHeight="400"
    d:DesignWidth="350"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    Title="登录"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" 
    WindowStyle="None" 
    ResizeMode="NoResize">

    <Grid>
        <!-- 标题栏 -->
        <ui:TitleBar 
            Height="35" 
            ShowMaximize="False" 
            CanMaximize="False" 
            Title="登录" 
            VerticalAlignment="Top">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/mfsc-256.ico" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!-- 主内容区域 -->
        <StackPanel 
            VerticalAlignment="Center" 
            HorizontalAlignment="Stretch"
            Margin="10,50,10,50">

            <!-- 应用标题 -->
            <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center">
                <ui:TextBlock FontFamily="Segoe UI Variable" FontSize="24" FontWeight="Bold">
                    YoungBat MFSC
                </ui:TextBlock>
                <ui:TextBlock FontFamily="Segoe UI Variable" FontSize="14" Foreground="Gray" TextAlignment="Center">
                    请登录以继续使用
                </ui:TextBlock>
            </StackPanel>
            <!-- 密码输入区域 -->
            <StackPanel Margin="0,0,0,20">
                <ui:TextBlock 
                    FontFamily="Segoe UI Variable" 
                    FontSize="14"
                    Margin="0,0,0,5">
                    请输入密码:
                </ui:TextBlock>
                <ui:PasswordBox 
                    Height="40" 
                    FontSize="14"
                    Padding="10"
                    Password="{Binding Password,Mode=OneWayToSource}"/>
            </StackPanel>

            <!-- 按钮区域 -->
            <ui:Button 
                HorizontalAlignment="Stretch" 
                Content="确认"
                Height="40"
                FontSize="14"
                Margin="0,10,0,0"
                Command="{Binding TaskLoginCommand}"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
